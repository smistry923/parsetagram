<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="264dp"
        android:layout_height="247dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        app:srcCompat="@android:color/black"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="192dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="69dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPostImage"
        android:layout_marginStart="37dp"
        app:srcCompat="@drawable/ufi_heart"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="331dp" />

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPostImage"
        android:layout_marginStart="79dp"
        app:srcCompat="@drawable/ufi_comment"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="331dp" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivLike"
        android:layout_marginStart="36dp"
        android:text="TextView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/timeStamp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/timeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivLike"
        android:layout_below="@+id/tvBody"
        android:text="TextView" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_below="@+id/ivPostImage"
        android:layout_toEndOf="@+id/ivComment"
        app:srcCompat="@drawable/ufi_new_direct" />

    <EditText
        android:id="@+id/etComment"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btSend"
        android:layout_centerHorizontal="true"
        tools:text="Comment" />

    <Button
        android:id="@+id/btSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="38dp"
        android:text="Comment" />

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/ivPostImage"
        android:layout_alignStart="@+id/ivPostImage"
        android:layout_marginBottom="-119dp"
        app:srcCompat="@android:color/holo_purple" />

    <ImageView
        android:id="@+id/ivBookmark"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/ivPostImage"
        android:layout_below="@+id/ivPostImage"
        app:srcCompat="@drawable/ufi_save" />

    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="29dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/ivPostImage"
        android:layout_alignTop="@+id/tvUserName"
        app:srcCompat="@drawable/ufi_more" />

</RelativeLayout>